{% extends '::base.html.twig' %}

{% block title %}
    FarmaManager
{% endblock %}

{% block stylesheets %}

    <link href="{{ asset('bundles/estilofarmanager/css/blog-home.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/estilofarmanager/css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/estilofarmanager/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />

{% endblock %}

{% block body %}
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="">FarManager</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{ path('dwes_admin_Index') }}">INICIO
                                <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>

                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{ path("dwes_admin_perfil",{'username':app.user.username}) }}">PERFIL
                                <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>

                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{ path("dwes_admin_listar",{'username':app.user.username}) }}">LISTAR
                                <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                {% else %}
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{ path('dwes_blog_homepage') }}">INICIO
                                <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                {% endif %}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <ul class="nav pull-right">
                        <li class="active"><a href="{{ path('dwes_blog_logout') }}">SALIR
                                <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                {% else %}
                    <ul class="nav pull-right">
                        <li class="active"><a href="{{ path('dwes_blog_login') }}">LOGIN
                                <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>

                    <ul class="nav pull-right">
                        <li class="active"><a href="{{ path('dwes_blog_registro') }}">REGISTRO
                                <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                {% endif %}

            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                {% block contenido %}
                {% endblock %}

            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                {% block aside %}
                {% endblock %}

            </div>

        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="well">
                <div class="container-fluid">
                    <p>Farmanager&reg; Derechos Reservados 2014-2015</p>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </footer>

    </div>

{% endblock %}

{% block javascripts %}

    <!-- jQuery -->
    <script src="{{ asset('bundles/estilofarmanager/js/jquery.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('bundles/estilofarmanager/js/bootstrap.min.js') }}"></script>

{% endblock %}