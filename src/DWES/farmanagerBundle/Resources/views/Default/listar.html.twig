{% extends 'DWESfarmanagerBundle::layout.html.twig' %}

{% block title %}
   Lista de Entradas
{% endblock %}

{% block contenido %}

    {% include 'DWESfarmanagerBundle:Default:flashMessage.html.twig' %}

    <a href="{{ path("dwes_admin_entrada") }}" class="btn btn-success"><span class="glyphicon glyphicon-pencil" aria-hidden="true">
    </span> CREAR ENTRADA</a>

    {% for entrada in entradas %}

        <h2>
            {{ entrada.titulo }}
        <small>Comentarios({{ entrada.comentarios|length}})</small>
        </h2>

        <a href="{{ path('dwes_admin_entrada', {'id' : entrada.id}) }}" class="btn btn-success"><span class="glyphicon glyphicon-edit" aria-hidden="true">
                </span> EDITAR ENTRADA</a>
        {% if entrada.comentarios|length == '0' %}
            <a href="{{ path('dwes_admin_eliminar_entradas_perfil', {'id' : entrada.id}) }}" class="btn btn-success"><span class="glyphicon glyphicon-trash" aria-hidden="true">
                </span> ELIMINAR ENTRADA</a><br><br>
        {% else %}
            <a href="{{ path('dwes_admin_listar_comentario', {'id' : entrada.id}) }}" class="btn btn-success"><span class="glyphicon glyphicon-edit" aria-hidden="true">
                </span> EDITAR COMENTARIOS</a>
        {% endif %}

        <hr>

    {% endfor %}

{% endblock %}